<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".Reward">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header LinearLayout containing logo and xp point system -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginTop="30dp"
            android:orientation="horizontal"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:gravity="center_vertical">

            <!-- Logo ImageView -->
            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:contentDescription="@string/logo"
                app:srcCompat="@drawable/logotedu" />

            <!-- Spacer to push the XP component to the right -->
            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <!-- XP Points Component -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/rounded_background"
                android:padding="8dp"
                android:layout_gravity="end">

                <!-- XP Text -->
                <TextView
                    android:id="@+id/xpText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1000xp"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />

                <!-- XP Icon -->
                <ImageView
                    android:id="@+id/flameIcon"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginStart="8dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Banner ImageView -->
        <ImageView
            android:id="@+id/rewardBanner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:contentDescription="@string/reward_banner"
            app:srcCompat="@drawable/reward_banner" />

        <!-- Reward/Points Component -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:background="@drawable/rounded_background"
            android:elevation="4dp"
            android:layout_margin="16dp">

            <!-- Placeholder for the image -->
            <ImageView
                android:id="@+id/targetIcon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/roket"
                android:contentDescription="@string/reward_image" />

            <!-- Text and Progress Section -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- Title Text -->
                <TextView
                    android:id="@+id/rewardTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reward/Points"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />

                <!-- Points Text -->
                <TextView
                    android:id="@+id/rewardProgressText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="70/100"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:layout_marginTop="4dp" />

                <!-- Progress Bar -->
                <ProgressBar
                    android:id="@+id/rewardProgressBar"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:layout_marginTop="8dp"
                    android:progress="70"
                    android:max="100"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:progressDrawable="@drawable/progress_bar_blue" />
            </LinearLayout>
        </LinearLayout>

        <!-- Redeem Section Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Redeem"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="16dp" />

        <!-- Slider Horizontal -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <!-- Card 1 -->
                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/rounded_background"
                    android:padding="16dp"
                    android:layout_marginEnd="16dp"
                    android:elevation="4dp">

                    <ImageView
                        android:id="@+id/cardImage1"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:contentDescription="@string/card_image"
                        android:src="@drawable/ic_launcher_background" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1X Free Voucher at XXI\n100 Point"
                        android:textSize="14sp"
                        android:textColor="@android:color/black"
                        android:layout_marginTop="8dp" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:backgroundTint="#3C84C7"
                        android:text="Redeem"
                        android:textColor="@android:color/white" />
                </LinearLayout>
                <!-- Card 1 -->
                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/rounded_background"
                    android:padding="16dp"
                    android:layout_marginEnd="16dp"
                    android:elevation="4dp">

                    <ImageView
                        android:id="@+id/cardImage2"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:contentDescription="@string/card_image"
                        android:src="@drawable/ic_launcher_background" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1X Free Voucher at XXI\n100 Point"
                        android:textSize="14sp"
                        android:textColor="@android:color/black"
                        android:layout_marginTop="8dp" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:backgroundTint="#3C84C7"
                        android:text="Redeem"
                        android:textColor="@android:color/white" />
                </LinearLayout>
                <!-- Card 1 -->
                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/rounded_background"
                    android:padding="16dp"
                    android:layout_marginEnd="16dp"
                    android:elevation="4dp">

                    <ImageView
                        android:id="@+id/cardImage3"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:contentDescription="@string/card_image"
                        android:src="@drawable/ic_launcher_background" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1X Free Voucher at XXI\n100 Point"
                        android:textSize="14sp"
                        android:textColor="@android:color/black"
                        android:layout_marginTop="8dp" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:backgroundTint="#3C84C7"
                        android:text="Redeem"
                        android:textColor="@android:color/white" />
                </LinearLayout>

                <!-- Tambahkan kartu lain di sini -->
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>
</ScrollView>
