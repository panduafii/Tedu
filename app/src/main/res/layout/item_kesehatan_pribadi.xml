<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/rounded_yellow"
    android:padding="12dp"
    android:layout_marginBottom="8dp">

    <TextView
        android:id="@+id/tvNama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nama: "
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/tvUmur"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Umur: "
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/tvJenisKelamin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Jenis Kelamin: "
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/tvAlergi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Alergi Makanan: "
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/tvKondisiKesehatan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kondisi Kesehatan: "
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/tvPantangan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pantangan Makanan: "
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/tvBeratBadan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Berat Badan: "
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/tvTinggiBadan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tinggi Badan: "
        android:textColor="@android:color/black" />
    <TextView
        android:id="@+id/tvKondisiUmum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kondisi Umum: "
        android:textColor="@android:color/black" />
    <TextView
        android:id="@+id/tvMakananKonsumsi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Makanan yang Dikonsumsi: "
        android:textColor="@android:color/black" />
</LinearLayout>
