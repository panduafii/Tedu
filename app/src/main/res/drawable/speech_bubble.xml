<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Bubble Background -->
    <item>
        <shape>
            <solid android:color="#FFFFFF" /> <!-- Warna dalam diubah menjadi putih -->
            <corners android:radius="8dp" />
            <padding
                android:left="16dp"
                android:top="12dp"
                android:right="16dp"
                android:bottom="12dp" />
            <stroke
                android:width="2dp"
                android:color="#143E64FF" /> <!-- Warna border diubah menjadi biru dongker -->
        </shape>
    </item>

    <!-- Bubble Tail -->
    <item
        android:gravity="bottom|left">
        <shape>
            <solid android:color="#FFFFFF" /> <!-- Warna tail diubah menjadi putih -->
            <path
                android:pathData="M0,0 L16,16 L16,0 Z"
                android:fillColor="#143E64FF" /> <!-- Warna tail diubah menjadi biru dongker -->
        </shape>
    </item>
</layer-list>
