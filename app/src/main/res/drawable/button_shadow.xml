<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#000000" /> <!-- Shadow color -->
            <corners android:radius="15dp" /> <!-- Match corner radius -->
        </shape>
    </item>
    <item android:top="2dp" android:left="2dp" android:right="2dp" android:bottom="5dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Button background color -->
            <corners android:radius="15dp" /> <!-- Match corner radius -->
        </shape>
    </item>
</layer-list>
